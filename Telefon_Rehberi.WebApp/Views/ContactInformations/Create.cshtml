@{
}

<form asp-controller="ContactInformations" asp-action="Create" method="post">
    <input type="hidden" name="personUUID" value="@Model.PersonUUID" />
    <div class="form-group">
        <label for="phone">Telefon</label>
        <input type="text" class="form-control" id="phone" name="phone" placeholder="Telefon giriniz.">
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" id="email" name="email" placeholder="Email giriniz.">
    </div>

    <div class="form-group">
        <label for="location">Konum</label>
        <input type="text" class="form-control" id="location" name="location" placeholder="Konum giriniz.">
    </div>

    </br>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>